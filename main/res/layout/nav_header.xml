<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="@dimen/margin160"
    android:gravity="bottom"
    android:background="@color/cyan"
    android:padding="@dimen/text_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin250"
        android:src="@drawable/download4"/>
    <TextView
        android:id="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:paddingTop="@dimen/margin20"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin30"
        android:layout_below="@+id/h1"
        android:textColor="@color/white"
        android:textSize="@dimen/margin14"
        android:layout_marginBottom="@dimen/text_margin"/>


    <!-- Your header content goes here -->

</RelativeLayout>
